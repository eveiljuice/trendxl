# TrendXL Environment Configuration
# For Railway deployment - set these in Railway dashboard

# ===========================================
# API Keys (Required)
# ===========================================
# Get your EnsembleData API key from: https://dashboard.ensembledata.com/
ENSEMBLE_DATA_API_KEY=your_ensemble_api_key_here

# Get your OpenAI API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=your_openai_api_key_here

# ===========================================
# Database Configuration
# ===========================================
USE_SQLITE=true
SQLITE_DB_PATH=trendxl.db

# SeaTable (alternative to SQLite)
SEATABLE_API_TOKEN=your_seatable_token_here
SEATABLE_BASE_UUID=your_base_uuid_here

# ===========================================
# Server Configuration (Railway auto-sets these)
# ===========================================
HOST=0.0.0.0
PORT=8000
DEBUG=false

# Frontend URL (for CORS)
FRONTEND_URL=https://your-app.railway.app

# ===========================================
# AI/GPT Configuration
# ===========================================
GPT_MODEL=gpt-3.5-turbo
MAX_TOKENS=1000
TEMPERATURE=0.7

# ===========================================
# Application Settings
# ===========================================
# Maximum number of trends to fetch per request
MAX_TRENDS_PER_REQUEST=50

# Cache duration in seconds (3600 = 1 hour)
CACHE_DURATION=3600

# Enable/disable real-time features
REALTIME_ENABLED=true

# ===========================================
# Development/Debug Settings
# ===========================================
# Set to true for verbose logging
VERBOSE_LOGGING=false

# Enable API request logging
LOG_API_REQUESTS=false

# CORS Origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,http://127.0.0.1:3000